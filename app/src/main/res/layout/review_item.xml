<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivCommentPerson"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/ivCommentPerson"
            android:text="Rating :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvRatingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvRating"
            android:layout_alignBottom="@+id/tvRating"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/tvRating"
            android:text="Rating"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRating"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/ivCommentPerson"
            android:text="Comment :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvCommentText"
            android:layout_width="69dp"
            android:layout_height="31dp"
            android:layout_below="@id/tvRatingNumber"
            android:layout_alignBottom="@+id/tvComment"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="-1dp"
            android:layout_toRightOf="@id/tvComment"
            android:text="comment"
            android:textSize="14dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>