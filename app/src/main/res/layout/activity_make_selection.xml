<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeSelectionActivity"
    android:background="@drawable/background_image1">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@id/gd_right"
        app:layout_constraintStart_toStartOf="@id/gd_left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_jom_eat" />

    <TextView
        android:id="@+id/otpVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:text="Make Selection"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/gd_right"
        app:layout_constraintStart_toStartOf="@id/gd_left"
        app:layout_constraintTop_toBottomOf="@id/imageView_logo" />

    <Button
        android:id="@+id/btn_emailLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="40dp"
        android:text="Log In with Email"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/gd_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gd_left"
        app:layout_constraintTop_toBottomOf="@+id/otpVerification" />

    <Button
        android:id="@+id/btn_emailRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"
        android:text="Register With Email"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/gd_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gd_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_emailLogin" />

    <Button
        android:id="@+id/btn_usePhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"
        android:text="Use Phone Number"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/gd_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gd_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_emailRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>